{{#if loggedIn}}
<h1>Welcome {{username}}</h1>

<!--create plant-->
<div class="container">
        <div class="row">
        <div class="col-md-6">
          <div class="card border-dark mb-3">
                <div class="card-header">
                  Create Plant
                </div>
                <div class="card-body">
                  <form class="plant-form">
                    <div class="form-group">
                      <label for="common-name">Common Name</label>
                      <input type="form-input" class="form-control" id="common-name">
                    </div>
                    <div class="form-group">
                      <label for="scientific-name">Scientific Name</label>
                      <input type="form-input" class="form-control" id="scientific-name">
                    </div>

                    <div class="form-group">
                        <label for="life-cycle">Growth Habit</label>
                          <div class="form-check">
                            <input type="radio" class="form-check-input" value="Shrub" id="shrub" name="growth-habit">
                            <label class="form-check-label" for="growth-habit">Shrub</label>
                          </div>
                          <div class="form-check">
                            <input type="radio" class="form-check-input" value="Groundcover" id="groundcover" name="growth-habit">
                            <label class="form-check-label" for="growth-habit">Groundcover</label>
                          </div>
                          <div class="form-check">
                            <input type="radio" class="form-check-input" value="Herb" id="herb" name="growth-habit">
                            <label class="form-check-label" for="growth-habit">Herb</label>
                          </div>
                          <div class="form-check">
                            <input type="radio" class="form-check-input" value="Tree" id="tree" name="growth-habit">
                            <label class="form-check-label" for="growth-habit">Tree</label>
                          </div>
                          <div class="form-check">
                            <input type="radio" class="form-check-input" value="Vine" id="vine" name="growth-habit">
                            <label class="form-check-label" for="growth-habit">Vine</label>
                          </div>
                          <div class="form-check">
                            <input type="radio" class="form-check-input" value="Grass" id="grass" name="growth-habit">
                            <label class="form-check-label" for="growth-habit">Grass</label>
                          </div>
                          <div class="form-check">
                            <input type="radio" class="form-check-input" value="Cactus" id="cactus" name="growth-habit">
                            <label class="form-check-label" for="growth-habit">Cactus</label>
                          </div>
                    </div>

                    <div class="form-group">
                        <label for="life-cycle">Life Cycle</label>
                          <div class="form-check">
                            <input type="radio" class="form-check-input" value="Annual" id="annual" name="life-cycle">
                            <label class="form-check-label" for="life-cycle">Annual</label>
                          </div>
                          <div class="form-check">
                            <input type="radio" class="form-check-input" value="Perennial" id="perennial" name="life-cycle">
                            <label class="form-check-label" for="life-cycle">Perennial</label>
                          </div>
                    </div>


                    <div class="form-group">
                      <label for="light-reqs">Light Requirements</label>
                      <input type="form-input" class="form-control" id="light-reqs">
                    </div>
                    <div class="form-group">
                      <label for="water-reqs">Water Requirements</label>
                        <div class="form-check">
                          <input type="radio" class="form-check-input" value="Low" id="low" name="water-reqs">
                          <label class="form-check-label" for="water-reqs">Low</label>
                        </div>
                        <div class="form-check">
                          <input type="radio" class="form-check-input" value="Medium" id="medium" name="water-reqs">
                          <label class="form-check-label" for="water-reqs">Medium</label>
                        </div>
                        <div class="form-check">
                          <input type="radio" class="form-check-input" value="High" id="high" name="water-reqs">
                          <label class="form-check-label" for="water-reqs">High</label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-light border border-dark">Create</button>
                  </form>
                </div>
              </div>
        </div>
</div>


<!--existing plants-->
{{#each plants as |plant|}}
  <div class="card border-dark m-3" style="width:20rem;">
    <div class="card-header text-center">
      {{common_name}}
    </div>
    <a href="/plants/{{id}}">
        <img class="card-img-bottom" src="../public/images/{{growth_habit}}.png">
    </a>
   </div>
{{/each}}

{{else}}
<a href="/login">You must login first to view this page</a>
{{/if}}

<script src="/js/dashboard.js"></script>