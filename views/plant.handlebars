{{#if loggedIn}}

<h1>{{common_name}}</h1>

{{> update}}

<div class="container"></div>
  <div class="row">
    <div class="col-md-6">
      <div class="card border-dark mb-3">
        <div class="card-header">
          Details
        </div>
        <div class="card-body p-5">
          <p class="card-text"><b>Common Name: </b>{{common_name}}</p>
          <p class="card-text"><b>Scientific Name: </b>{{scientific_name}}</p>
          <p class="card-text"><b>Growth Habit: </b>{{growth_habit}}</p>
          <p class="card-text"><b>Life Cycle: </b>{{life_cycle}}</p>
          <p class="card-text"><b>Light Requirements: </b>{{light_reqs}}</p>
          <p class="card-text"><b>Water Requirements: </b>{{water_reqs}}</p>
        </div>
        <div class="card-footer"><small class="text-muted"><a href="#" data-toggle="modal" data-target="#updateModal">Update</a> |
            <a href="#" class="del-btn" data-id="{{id}}">Delete</a> </small></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="card border-dark mb-3">
        <div class="card-header">
          Tasks
        </div>
        <div class="card-body p-5">
        <form class="task-form">

          <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="watered">
              <label class="custom-control-label" for="watered">Watered</label>
            </div>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="pruned">
              <label class="custom-control-label" for="pruned">Pruned</label>
            </div>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="fertilized">
              <label class="custom-control-label" for="fertilized">Fertilized</label>
            </div>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="transplanted">
              <label class="custom-control-label" for="transplanted">Transplanted</label>
            </div>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="harvested">
              <label class="custom-control-label" for="harvested">Harvested</label>
            </div>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="applied">
              <label class="custom-control-label" for="applied">Applied insecticide/fungicide</label>
            </div>
            <button type="submit" class="btn btn-light border border-dark mt-3 task-button" id="{{id}}">Submit</button>
            <hr>
            <p class="card-text"><b>Watered: </b>{{#if task.watered}}✅{{/if}}</p>
            <p class="card-text"><b>Pruned: </b>{{#if task.pruned}}✅{{/if}}</p>
            <p class="card-text"><b>Fertilized: </b>{{#if task.fertilized}}✅{{/if}}</p>
            <p class="card-text"><b>Transplanted: </b>{{#if task.transplanted}}✅{{/if}}</p>
            <p class="card-text"><b>Harvested: </b>{{#if task.harvested}}✅{{/if}}</p>
            <p class="card-text"><b>Applied: </b>{{#if task.applied}}✅{{/if}}</p>
          </div>
        </form>
        </div>
      </div>
  </div>

   <div class="row">
      <div class="col-md-6">
        <div class="card border-dark mb-3">
          <div class="card-header">
          Notes
          </div>
          <form class="note-form">
            <div class="card-body p-5">
              <div class="form-group">
                <input type="form-input" class="form-control" id="add-note" placeholder="Add note...">
              </div>
              <button type="submit" class="btn btn-light border border-dark mt-3 note-button" id="{{id}}">Add</button>
              <hr>

            {{#each notes as |note|}}
            {{> note-details}}
            {{/each}}

          </form>
        </div>
      </div>
  </div>
</div>

<script src="/js/plant.js"></script>
{{/if}}