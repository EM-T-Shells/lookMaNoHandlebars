<div class="container-fluid d-flex justify-content-center m-auto">
  <!--login/signup-->
  <div class="col-sm-6">
    <!--login-->
    <div class="card border-dark">
      <div class="card-header">
        Log In
      </div>
      <form class="card-body form login-form">
        <div class="form-group">
          <label for="username-login">Username</label>
          <input type="username" class="form-control border-dark" id="username-login">
        </div>
        <div class="form-group">
          <label for="password-login">Password</label>
          <input type="password" class="form-control border-dark" id="password-login">
        </div>
        <button type="submit" class="btn btn-light border border-dark">Log In</button>
      </form>
    </div>
    <hr>
    <!--signup-->
    <div class="card border-dark">
      <div class="card-header">
        Sign Up
      </div>
      <form class="card-body form signup-form">
        <div class="form-group">
          <label for="username-signup">Username</label>
          <input type="username" class="form-control border-dark" id="username-signup">
        </div>
        <div class="form-group">
          <label for="password-signup">Password</label>
          <input type="password" class="form-control border-dark" id="password-signup"
            placeholder="Must contain minimum 8 characters">
        </div>
        <button type="submit" class="btn btn-light border border-dark">Sign Up</button>
      </form>

    </div>
  </div>
</div>

<script src="/js/login.js"></script>
<script src="/js/homepage.js"></script>